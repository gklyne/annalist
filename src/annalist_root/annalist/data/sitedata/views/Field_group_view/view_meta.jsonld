    }
  , { "annal:field_id":               "_field/Group_target_type"
    , "annal:field_placement":        "small:0,12"
    }
  , { "annal:field_id":               "_field/Group_fields"
    , "annal:field_placement":        "small:0,12"
    }
  ]
}
